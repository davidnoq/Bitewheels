<main class="form-signup w-100 m-auto d-flex justify-content-center align-items-center min-vh-100">
  <!-- Form Container with Maximum Width -->
  <div class="w-100" style="max-width: 30rem;">
    <!-- Logo and Title -->
    <div class="text-center mb-4">
      <%= image_tag 'svgs/logo.svg', alt: 'Bitewheels Logo', width: 72, height: 57 %>
      <h1 class="h3 mb-3 fw-normal">Sign Up</h1>
    </div>

    <!-- Devise Sign Up Form -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
      
      <!-- Display Error Messages -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field with Floating Label -->
      <div class="form-floating mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "name@example.com", id: "floatingEmail" %>
        <%= f.label :email, "Email address", class: "form-label", for: "floatingEmail" %>
      </div>

      <!-- First Name Field with Floating Label -->
      <div class="form-floating mb-3">
        <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", id: "floatingFirstName" %>
        <%= f.label :first_name, "First Name", class: "form-label", for: "floatingFirstName" %>
      </div>

      <!-- Last Name Field with Floating Label -->
      <div class="form-floating mb-3">
        <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", id: "floatingLastName" %>
        <%= f.label :last_name, "Last Name", class: "form-label", for: "floatingLastName" %>
      </div>

      <!-- Phone Number Field with Floating Label -->
      <div class="form-floating mb-3">
        <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone Number", id: "floatingPhoneNumber" %>
        <%= f.label :phone_number, "Phone Number", class: "form-label", for: "floatingPhoneNumber" %>
      </div>

      <!-- Password Field with Floating Label -->
      <div class="form-floating mb-3">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password", id: "floatingPassword" %>
        <%= f.label :password, "Password", class: "form-label", for: "floatingPassword" %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted"><em>(<%= @minimum_password_length %> characters minimum)</em></small>
        <% end %>
      </div>

      <!-- Password Confirmation Field with Floating Label -->
      <div class="form-floating mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password", id: "floatingPasswordConfirmation" %>
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label", for: "floatingPasswordConfirmation" %>
      </div>
 <% if params[:role].present? %>
    <%= f.hidden_field :role, value: params[:role] %>
  <% end %>
      <!-- Submit Button -->
      <div class="d-grid">
        <%= f.submit "Sign up", data: { turbo: false }, class: "btn btn-primary py-2 mt-3" %>
      </div>

      <!-- Additional Links (e.g., Sign In) -->
      <div class="mt-3 text-center">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>
</main>

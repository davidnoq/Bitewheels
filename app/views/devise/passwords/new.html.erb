<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card" style="width: 400px;">
    <div class="card-body">
      <h2 class="card-title text-center mb-3">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "example@mail.com"  %>
        </div>

        <div class="text-center mb-3">
          <%= f.submit "Reset password", class: "btn btn-primary" %>
        </div>
      <% end %>

    <div class="text-center mb-3">
          <%= render "devise/shared/links" %>
        </div>
      
    </div>
  </div>
</div>

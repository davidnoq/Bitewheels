<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-sm p-4" style="max-width: 400px; width: 100%;">
    <!-- Bootstrap icon or logo -->
    <div class="text-center mb-4">
      <span class="display-4 text-primary">
        <!-- Optionally use an icon here -->
        <i class="bi bi-bootstrap"></i>
      </span>
    </div>

    <h3 class="text-center mb-3">Please sign in</h3>

    <!-- Sign-in form -->
    <%= form_with url: event_organizer_session_path, method: :post, local: true do %>
      <div class="form-group mb-3">
        <label for="email" class="form-label">Email address</label>
        <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'Enter email' %>
      </div>

      <div class="form-group mb-3">
        <label for="password" class="form-label">Password</label>
        <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Enter password' %>
      </div>

      <div class="form-check mb-3">
        <%= check_box_tag :remember_me, 1, false, class: 'form-check-input' %>
        <label class="form-check-label" for="remember_me">Remember me</label>
      </div>

      <%= submit_tag 'Sign in', class: 'btn btn-primary w-100 mb-3' %>
    <% end %>

    <!-- Sign-up option -->
    <div class="text-center">
      <p class="mb-0">Don't have an account? 
        <%= link_to 'Sign up', new_event_organizer_registration_path, class: 'text-primary' %>
      </p>
    </div>

    <!-- Footer with copyright -->
    <div class="text-center mt-3">
      <small class="text-muted">© 2017–2024</small>
    </div>
  </div>
</div>

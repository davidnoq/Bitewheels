<% content_for :title, "My Applications" %>

<div class="container py-5">
  <div class="card shadow-sm mx-auto" style="max-width: 85%;">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center bg-dark text-white py-3 px-4">
      <h2 class="mb-0">My Event Applications</h2>
      <%= link_to "Back to Events", events_path, class: "btn btn-sm btn-light" %>
    </div>

    <!-- Body Section -->
    <div class="card-body px-4">
      <% if @event_applications.any? %>
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th scope="col">Event Name</th>
                <th scope="col">Food Truck Name</th>
                <th scope="col">Status</th>
                <th scope="col">Completed?</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @event_applications.each do |application| %>
                <tr>
                  <td>
                    <% if application.event.present? %>
                      <%= link_to application.event.name, event_path(application.event), class: "text-decoration-none" %>
                    <% else %>
                      <span class="text-muted">Event not found</span>
                    <% end %>
                  </td>
                  <td><%= application.food_truck.name %></td>
                  <td>
                    <span class="badge 
                      <%= case application.status
                          when 'pending' then 'bg-warning text-dark'
                          when 'approved' then 'bg-success'
                          when 'rejected' then 'bg-danger'
                          else 'bg-secondary' 
                          end %>">
                      <%= application.status.capitalize %>
                    </span>
                  </td>
                  <td>
                    <% if application.event&.completed? %>
                      <span class="badge bg-success">Yes</span>
                    <% else %>
                      <span class="badge bg-secondary">No</span>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to "View Application", event_application_path(application), class: "btn btn-primary btn-sm" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-center mt-4">
          <%= paginate @event_applications, param_name: :applications_page %>
        </div>
      <% else %>
        <p class="text-muted text-center mt-4">You have no applications at the moment.</p>
      <% end %>
    </div>
  </div>
</div>

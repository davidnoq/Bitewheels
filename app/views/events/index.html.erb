<% content_for :title, "Events" %>

<!-- Flash Messages -->
<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissible fade show text-center mx-auto mt-3" style="max-width: 60%;" role="alert">
    <%= flash[:notice] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger alert-dismissible fade show text-center mx-auto mt-3" style="max-width: 60%;" role="alert">
    <%= flash[:alert] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class=" p-5">
  <!-- Header Section -->

  <!-- Top Section with Heading and Icon -->
  <div class="mb-4">
    <h2 class="fw-bold text-dark d-flex justify-content-center align-items-center">
      <i class="bi bi-calendar-week me-2"></i> Events - Event Manager
    </h2>
    <hr class="my-4">
  </div>

 <div class="mb-5">
    <!-- Alert for Pending Applications -->
<% if @pending_applications&.any? %>
  <div class="alert alert-warning alert-dismissible fade show text-center mx-auto mb-4" style="max-width: 50%;" role="alert">
    <strong>Attention:</strong> You have <%= @pending_applications.size %> pending application(s) across <%= @pending_applications.map(&:event).uniq.size %> event(s).
    <div class="mt-3 text-center">
      <% @pending_applications.group_by(&:event).each do |event, applications| %>
        <div class="mb-3">
          <strong><%= event.name %></strong> (<%= applications.size %> pending application(s)):
          <ul class="list-unstyled mt-2">
            <% applications.each do |application| %>
              <li>
                <strong><%= application.food_truck.name %></strong>
                <%= link_to "View Application", event_event_application_path(event, application), class: "text-warning ms-2" %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>


<div class="container d-flex justify-content-center align-items-center mb-5">
  
  <%= link_to new_event_path, class: "btn btn-primary btn-lg d-flex align-items-center" do %>
    <i class="bi bi-plus me-2"></i> Create Event
  <% end %>
</div>
  <!-- Tabs for Published and Drafted Events -->
  <ul class="container nav nav-tabs w-full mb-4 justify-content-center" id="eventTabs" role="tablist">
    <li class="nav-item " role="presentation">
      <button class="nav-link active" id="published-tab" data-bs-toggle="tab" data-bs-target="#published" type="button" role="tab" aria-controls="published" aria-selected="true">
        <i class="bi bi-folder-fill me-2"></i> Published Events
      </button>
    </li>
    <li class="nav-item " role="presentation">
      <button class="nav-link" id="drafted-tab" data-bs-toggle="tab" data-bs-target="#drafted" type="button" role="tab" aria-controls="drafted" aria-selected="false">
        <i class="bi bi-pencil-square me-2"></i> Drafted Events
      </button>
    </li>
    <li class="nav-item " role="presentation">
    <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button" role="tab" aria-controls="completed" aria-selected="false">
      <i class="bi bi-check-circle me-2"></i> Completed Events
    </button>
  </li>
  </ul>

  <div class="tab-content" id="eventTabsContent">
    <!-- Published Events Tab -->
    <div class="container tab-pane fade show active" id="published" role="tabpanel" aria-labelledby="published-tab">
      <% if @published_events.any? %>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
          <% @published_events.each do |event| %>
            <div class="col">
              <div class="card h-100 shadow-sm">
                <!-- Event Image -->
                <!-- Add an image here if available -->
                <%# Example: <%= image_tag event.image_url, class: 'card-img-top', alt: event.name %> 

                <div class="card-body d-flex flex-column">
                  <h5 class="card-title text-center"><%= event.name %></h5>
                  <p class="card-text"><strong>Address:</strong> <%= event.address %></p>
                  <p class="card-text"><strong>Dates:</strong> <%= event.start_date.strftime("%B %d, %Y") %> - <%= event.end_date.strftime("%B %d, %Y") %></p>
                  <p class="card-text"><strong>Food Trucks Needed:</strong> <%= event.foodtruck_amount %></p>
                  <p class="card-text"><strong>Credit Cost:</strong> <%= event.credit_cost %></p>
                  <p class="card-text"><strong>Searching for Cuisine: </strong> <%= event.searching_for_cuisine %></p>
                  <!-- Pending Applications Alert within Event Card -->
                  <% if @pending_applications.where(event_id: event.id).any? %>
                    <div class="alert alert-info p-2 mb-2" role="alert">
                      <strong>Pending Applications:</strong> <%= @pending_applications.where(event_id: event.id).count %>
                    </div>
                  <% end %>

                  <div class="mt-auto">
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <%= link_to "View Event", event_path(event), class: "btn btn-sm btn-outline-primary" %>
                        
                      </div>
                      <small class="text-muted"><%= time_ago_in_words(event.updated_at) %> ago</small>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted text-center">No published events found.</p>
      <% end %>

      <!-- Pagination -->
      <% if @published_events.respond_to?(:total_pages) && @published_events.total_pages > 1 %>
        <div class="d-flex justify-content-center mt-4">
          <%= paginate @published_events, param_name: :published_page %>
        </div>
      <% end %>
    </div>

    <!-- Drafted Events Tab -->
    <div class="container tab-pane fade" id="drafted" role="tabpanel" aria-labelledby="drafted-tab">
      <% if @drafted_events.any? %>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
          <% @drafted_events.each do |event| %>
            <div class="col">
              <div class="card h-100 shadow-sm">
                <!-- Event Image -->
                <!-- Add an image here if available -->
                <%# Example: <%= image_tag event.image_url, class: 'card-img-top', alt: event.name %> 

                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= event.name %></h5>
                  <p class="card-text"><strong>Address:</strong> <%= event.address %></p>
                  <p class="card-text"><strong>Dates:</strong> <%= event.start_date.strftime("%B %d, %Y") %> - <%= event.end_date.strftime("%B %d, %Y") %></p>
                  <p class="card-text"><strong>Food Trucks Needed:</strong> <%= event.foodtruck_amount %></p>
                  <p class="card-text"><strong>Credit Cost:</strong> <%= event.credit_cost %></p>
                  <p class="card-text"><strong>Searching for Cuisine: </strong> <%= event.searching_for_cuisine %></p>

                  <!-- Pending Applications Alert within Event Card -->
                  <% if @events_with_pending_applications.include?(event.id) %>
                    <div class="alert alert-warning p-2 mb-2" role="alert">
                      <strong>Pending Applications:</strong> <%= @pending_applications_per_event[event.id] %>
                    </div>
                  <% end %>

                  <div class="mt-auto">
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <%= link_to "View Draft", event_path(event), class: "btn btn-sm btn-outline-primary" %>
                       
                      </div>
                      <small class="text-muted"><%= time_ago_in_words(event.updated_at) %> ago</small>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted text-center">No drafted events found.</p>
      <% end %>

      
      <!-- Pagination -->
      <% if @drafted_events.respond_to?(:total_pages) && @drafted_events.total_pages > 1 %>
        <div class="d-flex justify-content-center mt-4">
          <%= paginate @drafted_events, param_name: :draft_page %>
        </div>
      <% end %>
    </div>

    <!-- Completed Events Tab -->
    <div class="container tab-pane fade" id="completed" role="tabpanel" aria-labelledby="completed-tab">
      <% if @completed_events.any? %>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
          <% @completed_events.each do |event| %>
            <div class="col">
              <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                  <!-- Event Name -->
                  <h5 class="card-title text-center"><%= event.name %></h5>

                  <!-- Completed Badge -->
                  <p class="text-center">
                    <span class="badge bg-secondary">Completed</span>
                  </p>

                  <!-- Event Details -->
                  <p class="card-text"><strong>Address:</strong> <%= event.address %></p>
                  <p class="card-text"><strong>Dates:</strong> <%= event.start_date.strftime("%B %d, %Y") %> - <%= event.end_date.strftime("%B %d, %Y") %></p>
                  <p class="card-text"><strong>Food Trucks Attended:</strong> <%= event.foodtruck_amount %></p>

                  <!-- Show Event Button -->
                  <div class="mt-auto">
                    <%= link_to "View Event", event_path(event), class: "btn btn-outline-primary btn-sm" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">No completed events available.</p>
      <% end %>
    </div>
  </div>
</div>

<!-- Optional JavaScript: Bootstrap JS and dependencies -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

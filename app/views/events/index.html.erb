<% content_for :title, "Events" %>

<!-- Flash Messages -->
<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissible fade show text-center mx-auto mt-3" style="max-width: 60%;" role="alert">
    <%= flash[:notice] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger alert-dismissible fade show text-center mx-auto mt-3" style="max-width: 60%;" role="alert">
    <%= flash[:alert] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

  </div>
<% end %>

<div class="container py-5">
  <!-- Header Section -->
  <div class="text-center mb-4">
    <h1 class="display-4 fw-bold text-dark">Manage Your Events</h1>
  </div>

  <div class="mb-5">
    <!-- Create Event Button -->
    <div class="d-flex justify-content-center mb-4">
      <%= link_to "Create Event", new_event_path, class: "btn btn-primary btn-lg" %>
    </div>

    <!-- Alert for Pending Applications -->
    <% if @events_with_pending_applications.any? %>
      <div class="alert alert-warning alert-dismissible fade show text-center mx-auto mb-4" style="max-width: 80%;" role="alert">
        <strong>Attention:</strong> You have <%= @events_with_pending_applications.size %> event(s) with pending applications.
        <ul class="list-unstyled mt-2">
          <% @published_events.each do |event| %>
            <% if @events_with_pending_applications.include?(event.id) %>
              <li><%= link_to event.name, event_path(event), class: "text-warning" %></li>
            <% end %>
          <% end %> <!-- Added missing end for @published_events.each loop -->
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
  </div>

  <!-- Published Events -->
  <% if @published_events.any? %>
    <h3 class="mb-4 text-center">Published Events</h3>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% @published_events.each do |event| %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <!-- Event Image -->
            <!-- You can add an image here if available -->

            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= event.name %></h5>
              <p class="card-text"><strong>Address:</strong> <%= event.address %></p>
              <p class="card-text"><strong>Dates:</strong> <%= event.start_date.strftime("%B %d, %Y") %> - <%= event.end_date.strftime("%B %d, %Y") %></p>
              <p class="card-text"><strong>Food Trucks Needed:</strong> <%= event.foodtruck_amount %></p>
              <p class="card-text"><strong>Credit Cost:</strong> <%= event.credit_cost %></p>

              <!-- Pending Applications Alert within Event Card -->
              <% if @events_with_pending_applications.include?(event.id) %>
                <div class="alert alert-info p-2 mb-2" role="alert">
                  <strong>Pending Applications:</strong> <%= @pending_applications_per_event[event.id] %>
                </div>
              <% end %>

              <div class="mt-auto">
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to "View Event", event_path(event), class: "btn btn-sm btn-outline-primary" %>
                    <%= link_to "Edit Event", edit_event_path(event), class: "btn btn-sm btn-outline-secondary" %>
                  </div>
                  <small class="text-muted"><%= time_ago_in_words(event.updated_at) %> ago</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted text-center">No published events found.</p>
  <% end %>

  <!-- Drafted Events -->
  <% if @drafted_events.any? %>
    <h3 class="mt-5 mb-4 text-center">Drafted Events</h3>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% @drafted_events.each do |event| %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <!-- Event Image -->
            <!-- You can add an image here if available -->

            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= event.name %></h5>
              <p class="card-text"><strong>Address:</strong> <%= event.address %></p>
              <p class="card-text"><strong>Dates:</strong> <%= event.start_date.strftime("%B %d, %Y") %> - <%= event.end_date.strftime("%B %d, %Y") %></p>
              <p class="card-text"><strong>Food Trucks Needed:</strong> <%= event.foodtruck_amount %></p>

              <!-- Pending Applications Alert within Event Card -->
              <% if @events_with_pending_applications.include?(event.id) %>
                <div class="alert alert-warning p-2 mb-2" role="alert">
                  <strong>Pending Applications:</strong> <%= @pending_applications_per_event[event.id] %>
                </div>
              <% end %>

              <div class="mt-auto">
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to "View Draft", event_path(event), class: "btn btn-sm btn-outline-primary" %>
                    <%= link_to "Edit Draft", edit_event_path(event), class: "btn btn-sm btn-outline-secondary" %>
                  </div>
                  <small class="text-muted"><%= time_ago_in_words(event.updated_at) %> ago</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<!-- Pagination -->
<div class="d-flex justify-content-center mt-4">
  <%= paginate @events %>
</div>

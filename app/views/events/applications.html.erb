<% content_for :title, "Event Applications" %>

<div class="d-flex p-4" style="height: 100vh;">
  <!-- Event Applications Section -->
  <div class="col flex-grow-1">
    <div class="row">
      <!-- Pending Applications Column -->
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-header bg-dark text-white">
            <h3 class="mb-0">Pending</h3>
          </div>
          <div class="card-body">
            <% pending_applications = @event_applications.select { |application| application.status == 'pending' } %>
            <% if pending_applications.any? %>
              <% pending_applications.each do |application| %>
                <div class="border rounded bg-white p-3 mb-4">
                  <div class="d-flex justify-content-between align-items-center">
                    <strong><%= application.food_truck.name %></strong>
                    <span class="badge bg-warning text-dark">Pending</span>
                  </div>
                  <hr>
                  <p class="card-text">
                    <strong>Event Name:</strong>
                    <%= link_to application.event.name, event_path(application.event) %>
                  </p>
                  <div class="text-center mt-3">
  <%= link_to "View Food Truck", event_show_application_food_truck_path(event_id: application.event.id, id: application.id, food_truck_id: application.food_truck.id), class: "btn btn-primary btn-sm" %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <p class="text-muted">No pending applications.</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Approved Applications Column -->
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-header bg-dark text-white">
            <h3 class="mb-0">Approved</h3>
          </div>
          <div class="card-body">
            <% approved_applications = @event_applications.select { |application| application.status == 'approved' } %>
            <% if approved_applications.any? %>
              <% approved_applications.each do |application| %>
                <div class="border rounded bg-white p-3 mb-4">
                  <div class="d-flex justify-content-between align-items-center">
                    <strong><%= application.food_truck.name %></strong>
                    <span class="badge bg-success">Approved</span>
                  </div>
                  <hr>
                  <p class="card-text">
                    <strong>Event Name:</strong>
                    <%= link_to application.event.name, event_path(application.event) %>
                  </p>
                  <div class="text-center mt-3">
  <%= link_to "View Food Truck", event_show_application_food_truck_path(event_id: application.event.id, id: application.id, food_truck_id: application.food_truck.id), class: "btn btn-primary btn-sm" %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <p class="text-muted">No approved applications.</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Rejected Applications Column -->
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-header bg-dark text-white">
            <h3 class="mb-0">Rejected</h3>
          </div>
          <div class="card-body">
            <% rejected_applications = @event_applications.select { |application| application.status == 'rejected' } %>
            <% if rejected_applications.any? %>
              <% rejected_applications.each do |application| %>
                <div class="border rounded bg-white p-3 mb-4">
                  <div class="d-flex justify-content-between align-items-center">
                    <strong><%= application.food_truck.name %></strong>
                    <span class="badge bg-danger">Rejected</span>
                  </div>
                  <hr>
                  <p class="card-text">
                    <strong>Event Name:</strong>
                    <%= link_to application.event.name, event_path(application.event) %>
                  </p>
                  <div class="text-center mt-3">
  <%= link_to "View Food Truck", event_show_application_food_truck_path(event_id: application.event.id, id: application.id, food_truck_id: application.food_truck.id), class: "btn btn-primary btn-sm" %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <p class="text-muted">No rejected applications.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Pagination for Event Applications -->
    <div class="d-flex justify-content-center mt-4">
      <nav aria-label="Event applications page navigation">
        <%= paginate @event_applications, param_name: :page %>
      </nav>
    </div>
  </div>
</div>

<% content_for :title, "Completed Events" %>

<div class="container py-5">
  <!-- Header Section -->
  <div class="text-center mb-4">
    <h1 class="fw-bold text-dark">Completed Events</h1>
    <%= link_to "Back to Events", events_path, class: "btn btn-light btn-lg mt-3" %>
  </div>

  <!-- Completed Events Section -->
  <div class="card shadow-sm">
    <div class="d-flex justify-content-between align-items-center bg-dark text-white py-3 px-3">
      <h2 class="mb-0">Completed Events</h2>
    </div>
    <div class="card-body">
      <% if @events.any? %>
        <div class="row g-4">
          <% @events.each do |event| %>
            <div class="col-lg-4 col-md-6">
              <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                  <!-- Event Name -->
                  <h5 class="card-title text-center"><%= event.name %></h5>
                  <p class="text-center">
                    <span class="badge bg-secondary">Completed</span>
                  </p>

                  <!-- Event Details -->
                  <p class="card-text"><strong>Address:</strong> <%= event.address %></p>
                  <p class="card-text"><strong>Dates:</strong> <%= event.start_date.strftime("%B %d, %Y") %> - <%= event.end_date.strftime("%B %d, %Y") %></p>
                  <p class="card-text"><strong>Food Trucks Attended:</strong> <%= event.foodtruck_amount %></p>

                  <!-- Show Event Button -->
                  <div class="mt-auto text-center">
                    <%= link_to "View Event", event_path(event), class: "btn btn-primary btn-sm w-100" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-center mt-4">
          <%= paginate @events %>
        </div>
      <% else %>
        <p class="text-muted text-center">No completed events available.</p>
      <% end %>
    </div>
  </div>
</div>

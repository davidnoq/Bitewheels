<!-- app/views/events/completed.html.erb -->

<% content_for :title, "Completed Events" %>

<div class="container py-5">
  <!-- Header Section -->
  <div class="text-center mb-4">
    <h1 class="display-4 fw-bold text-dark">Completed Events</h1>
    <%= link_to "Back to Events", events_path, class: "btn btn-light btn-lg mt-3" %>
  </div>

  <!-- Completed Events Section -->
  <% if @events.any? %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% @events.each do |event| %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
              <!-- Event Name -->
              <h5 class="card-title text-center"><%= event.name %></h5>
              
              <!-- Completed Badge -->
              <p class="text-center">
                <span class="badge bg-secondary">Completed</span>
              </p>

              <!-- Event Details -->
              <p class="card-text"><strong>Address:</strong> <%= event.address %></p>
              <p class="card-text"><strong>Dates:</strong> <%= event.start_date.strftime("%B %d, %Y") %> - <%= event.end_date.strftime("%B %d, %Y") %></p>
              <p class="card-text"><strong>Food Trucks Attended:</strong> <%= event.foodtruck_amount %></p>

              <!-- Show Event Button -->
              <div class="mt-auto ">
                <%= link_to "View Event", event_path(event), class: "btn btn-outline-primary btn-sm " %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="d-flex justify-content-center mt-4">
      <%= paginate @events %>
    </div>
  <% else %>
    <p class="text-muted text-center">No completed events available.</p>
  <% end %>
</div>

<!-- JavaScript for Google Places Autocomplete (if needed) -->
<script>
  function initAutocomplete() {
    var input = document.getElementById('search_address');
    if (input) {
      var autocomplete = new google.maps.places.Autocomplete(input, { types: ['(cities)'] });
      autocomplete.addListener('place_changed', function() {
        var place = autocomplete.getPlace();
        if (!place.geometry) {
          alert("No details available for input: '" + place.name + "'");
        }
      });
    }
  }

  document.addEventListener("DOMContentLoaded", function() {
    initAutocomplete();
  });
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.google_maps[:api_key] %>&libraries=places&callback=initAutocomplete"></script>

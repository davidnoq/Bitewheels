<p style="color: green"><%= notice %></p>

<%= render @event %>

<div>
  <%= link_to "Edit this event", edit_event_path(@event), class: "btn btn-primary mt-3" %>
  <%= link_to "Back to events", events_path, class: "btn btn-link" %>

  <%= button_to "Destroy this event", @event, method: :delete, class: "btn btn-outline-danger mt-3", data: { turbo_confirm: "Are you sure you want to delete this event?" } %>

</div>

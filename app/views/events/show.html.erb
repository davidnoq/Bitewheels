<!-- app/views/events/show.html.erb -->

<% if notice %>
  <div class="alert alert-primary text-center" role="alert">
    <%= notice %>
  </div>
<% end %>

<% content_for :title, @event.name %>

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-white">
  <div class="container">
    <div class="card shadow-lg" style="max-width: 40rem; margin: auto; min-height: 400px;">
      <div class="card-header bg-primary text-white text-center">
        <h1 class="mb-0"><%= @event.name %></h1>
      </div>
      <div class="card-body" style="min-height: 300px;">
        <!-- Event Details -->
        <%= render @event, show_name: false, show_latitude_longitude: true, show_map: true %>
        
        <!-- Apply for Event Button for Non-Event Organizers -->
        <% if user_signed_in? && !current_user.eventorganizer? %>
          <% unless current_user.food_trucks.exists?(event: @event) %>
            <%= link_to 'Apply for Event', new_event_food_truck_path(@event, apply: true), class: 'btn btn-primary' %>
          <% else %>
            <p>You have already applied to this event.</p>
          <% end %>
        <% end %>
        
        <!-- Event Organizer Actions -->
        <% if user_signed_in? && current_user.eventorganizer? %>
          <div class="d-flex justify-content-between mt-4">
            <% if policy(@event).publish? %>
              <%= button_to "Publish", publish_event_path(@event), method: :patch, class: "btn btn-success" %>
            <% end %>
            <%= link_to "Edit this event", edit_event_path(@event), class: "btn btn-primary" %>
            <%= link_to "Back to events", events_path, class: "btn btn-secondary" %>
            <%= button_to "Delete this event", @event, method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure you want to delete this event?" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% content_for :title, "Food Trucks" %>

<!-- Flash Messages -->
<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissible fade show text-center mx-auto mt-3" style="max-width: 60%;" role="alert">
    <%= flash[:notice] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger alert-dismissible fade show text-center mx-auto mt-3" style="max-width: 60%;" role="alert">
    <%= flash[:alert] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="container py-5">
  <!-- Header Section -->
  <div class="text-center mb-4">
    <h1 class="display-4 fw-bold text-dark">Manage Your Food Trucks</h1>
  </div>

  <!-- Actions Section -->
  <div class="mb-5">
    <!-- Add Food Truck Button -->
    <div class="d-flex justify-content-center mb-4">
      <%= link_to "Add New Food Truck", new_food_truck_path, class: "btn btn-primary btn-lg" %>
    </div>

  </div>

  <!-- Food Trucks Section -->
  <% if @food_trucks.any? %>
    <h3 class="mb-4 text-center">Your Food Trucks</h3>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% @food_trucks.each do |food_truck| %>
        <div class="col">
          <!-- Food Truck Card -->
          <div class="card h-100 shadow-sm">
            <!-- Image Placeholder -->
            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center text-white" style="height: 200px;">
              <i class="fas fa-truck fa-5x"></i>
            </div>
            <div class="card-body d-flex flex-column">
              <!-- Food Truck Name -->
              <h5 class="card-title text-center fw-bold text-dark"><%= food_truck.name %></h5>

              <!-- Cuisine -->
              <p class="card-text text-center text-muted">
                <strong>Cuisine:</strong> <%= food_truck.cuisine %>
              </p>

            
              </p> 

              <!-- Action Buttons -->
              <div class="mt-auto text-center">
                <div class="btn-group">
                  <%= link_to "View", food_truck_path(food_truck), class: "btn btn-outline-primary btn-sm " %>
                  <%= link_to "Edit", edit_food_truck_path(food_truck), class: "btn btn-outline-secondary btn-sm" %>
                  <%= link_to "Delete", food_truck_path(food_truck), method: :delete, data: { confirm: "Are you sure you want to delete this food truck?" }, class: "btn btn-outline-danger btn-sm" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="d-flex justify-content-center mt-4">
      <%= paginate @food_trucks, param_name: :food_trucks_page %>
    </div>
  <% else %>
    <!-- No Food Trucks Message -->
    <div class="text-center">
      <i class="fas fa-truck fa-3x text-muted mb-3"></i>
      <p class="text-muted">You have no registered food trucks. Add one to get started!</p>
    </div>
  <% end %>
</div>

<!-- app/views/food_trucks/show.html.erb -->

<%# Set the page title %>
<% content_for :title, "Food Truck Application" %>

<div class="container my-5">
  <div class="card shadow">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">Food Truck Application Details</h2>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <p>
            <strong>User:</strong>
            <%= link_to @food_truck.user.email, user_path(@food_truck.user), class: "text-decoration-none" %>
          </p>
          <p>
            <strong>Cuisine:</strong>
            <%= @food_truck.cuisine %>
          </p>
          <p>
            <strong>Event:</strong>
            <%= link_to @food_truck.event.name, @food_truck.event, class: "text-decoration-none" %>
          </p>
        </div>
        <div class="col-md-6 text-end">
          <% if policy(@food_truck).edit? || policy(@food_truck).destroy? %>
            <div class="btn-group" role="group" aria-label="Action Buttons">
              <% if policy(@food_truck).edit? %>
                <%= link_to 'Edit', edit_food_truck_path(@food_truck), class: 'btn btn-warning' %>
              <% end %>
              
              <% if policy(@food_truck).destroy? %>
                <%= button_to 'Delete', food_truck_path(@food_truck), method: :delete, data: { confirm: 'Are you sure you want to delete this application?' }, class: 'btn btn-danger' %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="card-footer text-muted">
      <%= link_to 'Back to Food Truck Applications', food_trucks_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>

<% content_for :title, "New Food Truck Application" %>

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light py-5">
  <div class="container">
    <div class="card shadow-lg" style="max-width: 50rem; margin: auto;">
      <div class="card-header bg-warning text-white text-center">
        <h1 class="mb-0">New Food Truck Application</h1>
      </div>

      <div class="card-body">
        <%= render 'form', event: @event, food_truck: @food_truck %>
      </div>

      <div class="card-footer text-center">
        <%= link_to 'Back to Applications', food_trucks_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>

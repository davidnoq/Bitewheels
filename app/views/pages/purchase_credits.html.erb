<% content_for :title, "Purchase Credits" %>

<div class="container py-5">
  <!-- Page Header -->
  <div class="text-center mb-5">
    <h1 class="fw-bold text-dark">Purchase Credits</h1>
    <p class="text-muted  pt-5 lead">Users signed up automatically are given 100 FREE credits. </p><p class="text-muted lead">Add credits to your account to apply for more events and unlock premium features.</p>
  </div>

  <!-- Credit Packages Section -->
  <div class="m-auto py-5 row row-cols-1 row-cols-md-3 mb-3 text-center">
    <% @credit_packages.each do |package| %>
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
          <div class="card-header py-3">
            <h4 class="my-0 fw-normal"><%= package.name %></h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title">$<%= '%.2f' % (package.price_cents / 100.0) %><small class="text-body-secondary fw-light">/package</small></h1>
            <ul class="list-unstyled mt-3 mb-4">
              <li><strong>Credits:</strong> <%= package.credits %></li>
            </ul>
            <%= button_to "Buy #{package.name}", 
                          checkout_create_path(credit_package_id: package.id), 
                          method: :post, data: { turbo: false }, 
                          class: "w-100 btn btn-lg btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

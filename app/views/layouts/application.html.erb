<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Bitewheels" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <!-- <script src="https://js.stripe.com/v3/"></script>-->
    <%= action_cable_meta_tag %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
<%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>

    
  </head>

  <body>
  <% should_render_sidebar = 
     (controller_name == 'food_trucks') || 
     (controller_name == 'events') || 
     (controller_name == 'event_applications' && !['new', 'create'].include?(action_name)) || 
     (controller_name == 'pages' && action_name == 'purchase_credits') %>
    
    <% if should_render_sidebar %>
  <!-- Render Sidebar for Dashboard -->
  <div class="d-flex">
     <%= render 'shared/sidebar' %>
    <!-- Main Content Wrapper -->
    <div class="flex-grow-1" style="margin-left: 250px; min-height: 100vh;">
      <!-- Flash Messages -->
      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible fade show text-center mx-auto mt-3" style="max-width: 60%;" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show text-center mx-auto mt-3" style="max-width: 60%;" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <!-- Yield Content -->
      <div class="flex-grow-1 justify-content-center " style="min-height: calc(100vh - 4rem);">
        <%= yield %>
      </div>
    </div>
  </div>
<% else %>
  <!-- Render Top Navbar for Other Pages -->
  <%= render 'shared/top_navbar' %>
  <!-- Flash Messages -->
  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible fade show text-center mx-auto mt-3" style="max-width: 60%;" role="alert">
      <%= flash[:notice] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-danger alert-dismissible fade show text-center mx-auto mt-3" style="max-width: 60%;" role="alert">
      <%= flash[:alert] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
      <div class="flex-fill">
        <%= yield %>
      </div>
<% end %>

       
   
  </body>
</html>